.container
  %h2= @board.title
  - @tasks.each do |task|
    .card
      = link_to board_task_path(@board, task) do
        .card_body
          .card_title
            %p= task.title
          .card_content
            %p= task.content
          .card_icon
            = image_tag task.user.avatar_image
        .card_actions
          .dropdown
            = image_tag 'actions.svg'
            .dropdown-content.mini
              = link_to 'Edit', edit_board_task_path(@board, task)
              = link_to 'Delete', board_task_path(@board, task), data: {method: 'delete', confirm: '本当に削除してもよろしいですか?'}
  = link_to new_board_task_path(@board) do
    .card_new
      %p + Add new card