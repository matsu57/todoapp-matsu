.container
  %h2= head
  %ul
  - task.errors.full_messages.each do |message|
    %li= message
  = form_with(model: task, url: url, method: method, local: true) do |f|
    %div
      =f.label :eyecatch, 'Eyecatch image'
    %div
      = f.file_field :eyecatch, class: 'image_file'
    %div
      = f.label :title, 'Name'
    %div
      = f.text_field :title, class: 'text'
    %div
      = f.label :content, 'Description'
    %div
      = f.text_area :content
    %div
      = f.label :deadline, 'Deadline'
    %div
      = f.date_field :deadline, class: 'text'
    = f.submit 'Submit', class: 'btn-primary'