.container
  .card_detail
    .card_detail_head
      %h2= @task.title
      .card_actions
        .dropdown
          = image_tag 'actions.svg'
          .dropdown-content.mini
            = link_to 'Edit', edit_board_task_path(@board, @task)
            = link_to 'Delete', board_task_path(@board, @task), data: {method: 'delete', confirm: '本当に削除してもよろしいですか?'}

    .card_detail_body
      .card_image
        = image_tag 'sample_img.png'
      .card_detail_content
        %p= @task.content

  .comment
    %h3 Comment
    - @comments.each do |comment|
      .comment_wrap
        .comment_icon
          = image_tag 'default-avatar.png'
        .comment_content
          %p=comment.content

    = link_to new_board_task_comment_path(@task.board, @task) do
      .comment_new
        %p + Add new comment